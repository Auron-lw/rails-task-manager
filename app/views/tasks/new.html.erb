<h1>New Task :</h1>

<%= form_with(model: @task, url: tasks_path) do |t| %>
  <%= t.label :title %>
  <%= t.text_field :title %>
  <%= t.label :details %>
  <%= t.text_area :details %>
  <%= t.label :completed %>
  <%= t.check_box :completed %>
  <%= t.submit 'Create task'%>
<% end %>

<br>
<%= link_to 'Back to "My tasks"', tasks_path %>
